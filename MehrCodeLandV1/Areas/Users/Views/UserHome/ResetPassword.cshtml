@using Core.DTOs
@model ResetPasswordVm
@{
    Layout = null;
}
<h2>Reset Password</h2>

<form  asp-area="Users" asp-controller="UserHome" asp-action="ResetPassword" method="post">

    <input type="hidden" asp-for="ActiveCode" />

    <div class="input-group">
        <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-describedby="password">
    </div>

    <div class="input-group">
        <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
        <input asp-for="RePassword" type="password" class="form-control" placeholder="RePassword" aria-describedby="password">
    </div>


    <div asp-validation-summary="All" class="text-danger">
    </div>
    <button class="btn btn-success">Password</button>

</form>